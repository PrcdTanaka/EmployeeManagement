<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
          "http://struts.apache.org/dtds/struts-config_1_3.dtd">

<struts-config>

<!-- ================================================ Form Bean Definitions -->

    <form-beans>

    	<!-- ActionFormの定義 -->

    	<!-- 勤怠メイン画面 -->
		<form-bean name="MainForm" type="sample.pr.main.MainForm"/>
		<form-bean name="LoginForm" type="sample.pr.main.LoginForm"/>
		<form-bean name="PasswordForm" type="sample.pr.main.PasswordForm"/>
		<form-bean name="SearchForm" type="sample.pr.main.SearchForm"/>

    </form-beans>



<!-- =========================================== Action Mapping Definitions -->

	<action-mappings>

    	<!-- Actionの定義 -->

		<!-- 勤怠メイン画面 -->
		<action
			name="MainForm"
			path="/MainAction"
			type="sample.pr.main.MainAction"
			validate="false"
			scope="request">
			<forward name="message" path="/jsp/Message.jsp"/>
			<forward name="view" path="/jsp/KintaiList.jsp"/>
			<forward name="back" path="/jsp/Main.jsp" />
		</action>

		<action
			name="LoginForm"
			path="/LoginAction"
			type="sample.pr.main.LoginAction"
			validate="false"
			scope="request">
			<forward name="message" path="/jsp/Main.jsp"/>
			<forward name="logout" path="/jsp/login.jsp"/>
			<forward name="login" path="/jsp.Main.jsp" />
			<forward name="manager" path="/jsp/Main.jsp"/>
			<forward name="back" path="/jsp/Main.jsp" />
		</action>


		<action
			name="PasswordForm"
			path="/PasswordAction"
			type="sample.pr.main.PasswordAction"
			validate="false"
			scope="request">
			<forward name="message" path="/jsp/Main.jsp"/>
		</action>

		<action
			name="SearchForm"
			path="/SearchAction"
			type="sample.pr.main.SearchAction"
			validate="false"
			scope="request">
			<forward name="text" path="/jsp/search.jsp"/>

		</action>
    </action-mappings>


<!-- ======================================== Message Resources Definitions -->

    <message-resources parameter="MessageResources" />


</struts-config>

