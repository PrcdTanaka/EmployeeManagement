<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
          "http://struts.apache.org/dtds/struts-config_1_3.dtd">

<struts-config>

<!-- ================================================ Form Bean Definitions -->

    <form-beans>

    	<!-- ActionFormã®å®ç¾© -->

    	<!-- å¤æ ã¡ã¤ã³ç»é¢ -->
		<form-bean name="MainForm" type="sample.pr.main.MainForm">
			<form-property name="userData" type="java.util.LinkedHashMap" />
		</form-bean>
		<form-bean name="LoginForm" type="sample.pr.main.LoginForm"/>
		<form-bean name="PasswordForm" type="sample.pr.main.PasswordForm"/>
		<form-bean name="SearchForm" type="sample.pr.main.SearchForm"/>
		<form-bean name="RegisterForm" type="sample.pr.main.RegisterForm"/>
		<form-bean name="Personal_informationForm" type="sample.pr.main.Personal_informationForm"/>

    </form-beans>



<!-- =========================================== Action Mapping Definitions -->

	<action-mappings>

    	<!-- Actionã®å®ç¾© -->

		<!-- å¤æ ã¡ã¤ã³ç»é¢ -->
		<action
			name="LoginForm"
			path="/LoginAction"
			type="sample.pr.main.LoginAction"
			validate="false"
			scope="request">
			<forward name="login" path="/jsp/login.jsp" />
			<forward name="main" path="/jsp/Main.jsp"/>
		</action>

		<action
			name="MainForm"
			path="/MainAction"
			type="sample.pr.main.MainAction"
			validate="false"
			scope="request">
			<forward name="logout" path="/jsp/logout.jsp" />
			<forward name="edit" path="/jsp/Personal_information.jsp" />
			<forward name="register" path="/jsp/register.jsp" />
			<forward name="search" path="/jsp/search.jsp" />
			<forward name="password" path="/jsp/Password.jsp" />
		</action>


		<action
			name="PasswordForm"
			path="/PasswordAction"
			type="sample.pr.main.PasswordAction"
			validate="false"
			scope="request">
			<forward name="message" path="/jsp/Main.jsp"/>
		</action>

		<action
			name="SearchForm"
			path="/SearchAction"
			type="sample.pr.main.SearchAction"
			validate="false"
			scope="request">
			<forward name="search" path="/jsp/search.jsp"/>
			<forward name="back" path="/jsp/Main.jsp"/>
		</action>

		<action
			name="RegisterForm"
			path="/RegisterAction"
			type="sample.pr.main.RegisterAction"
			validate="false"
			scope="request">
			<forward name="register" path="/jsp/register.jsp"/>
			<forward name="main" path="/jsp/Main.jsp"/>

		</action>

		<action
			name="Personal_informationForm"
			path="/Personal_informationAction"
			type="sample.pr.main.Personal_informationAction"
			validate="false"
			scope="request">
			<forward name="message" path="/jsp/Main.jsp"/>
		</action>



    </action-mappings>


<!-- ======================================== Message Resources Definitions -->

    <message-resources parameter="MessageResources" />


</struts-config>

