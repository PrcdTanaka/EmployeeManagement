<?xml version="1.0" encoding="ISO-8859-1" ?>
<!DOCTYPE struts-config PUBLIC
          "-//Apache Software Foundation//DTD Struts Configuration 1.3//EN"
          "http://struts.apache.org/dtds/struts-config_1_3.dtd">

<struts-config>

	<!-- ================================================ Form Bean Definitions -->

	<form-beans>

		<!-- ActionFormã®å®ç¾© -->

		<!-- å¤æ ã¡ã¤ã³ç»é¢ -->
		<form-bean name="MainForm" type="sample.pr.main.MainForm">
			<form-property name="userData" type="java.util.LinkedHashMap" />
		</form-bean>
		<form-bean name="LoginForm" type="sample.pr.main.LoginForm" />
		<form-bean name="SearchForm" type="sample.pr.main.SearchForm" />
		<form-bean name="PasswordForm" type="sample.pr.main.PasswordForm" />
		<form-bean name="RegisterForm" type="sample.pr.main.RegisterForm" />
		<form-bean name="Personal_informationForm" type="sample.pr.main.Personal_informationForm" />
		<form-bean name="Open_RefelenceForm" type="sample.pr.main.Open_RefelenceForm" />
		<form-bean name="Open_informationForm" type="sample.pr.main.Open_informationForm" />
		<form-bean name="PasswordChangeForm" type="sample.pr.main.PasswordChangeForm" />
		<form-bean name="AttendanceForm" type="sample.pr.main.AttendanceForm" />
		<form-bean name="KintaiMainForm" type="sample.pr.main.KintaiMainForm" />
		<form-bean name="KintaiMailForm" type="sample.pr.main.KintaiMailForm" />
		<form-bean name="ReservationForm" type="sample.pr.main.ReservationForm" />

	</form-beans>



	<!-- =========================================== Action Mapping Definitions -->

	<action-mappings>

		<!-- Actionã®å®ç¾© -->

		<!-- å¤æ ã¡ã¤ã³ç»é¢ -->
		<action name="LoginForm" path="/LoginAction" type="sample.pr.main.LoginAction"
			validate="false" scope="request">
			<forward name="login" path="/jsp/login.jsp" />
			<forward name="main" path="/jsp/Main.jsp" />
			<forward name="password" path="/jsp/PasswordForget.jsp" />
		</action>

		<action name="MainForm" path="/MainAction" type="sample.pr.main.MainAction"
			validate="false" scope="request">
			<forward name="logout" path="/jsp/logout.jsp" />
			<forward name="edit" path="/jsp/Personal_information.jsp" />
			<forward name="register" path="/jsp/register.jsp" />
			<forward name="search" path="/jsp/search.jsp" />
			<forward name="password" path="/jsp/Password.jsp" />
			<forward name="attendance" path="/jsp/Attendance.jsp" />
			<forward name="KintaiMain" path="/jsp/KintaiMain.jsp" />
			<forward name="reservation" path="/jsp/Reservation.jsp" />
			<forward name="Access" path="/jsp/Access_Control.jsp" />
		</action>

		<action name="PasswordForm" path="/PasswordAction"
			type="sample.pr.main.PasswordAction" validate="false" scope="request">
			<forward name="main" path="/jsp/Main.jsp" />
			<forward name="password" path="/jsp/Password.jsp" />
		</action>

		<action name="RegisterForm" path="/RegisterAction"
			type="sample.pr.main.RegisterAction" validate="false" scope="request">
			<forward name="register" path="/jsp/register.jsp" />
			<forward name="main" path="/jsp/Main.jsp" />
		</action>

		<action name="SearchForm" path="/SearchAction" type="sample.pr.main.SearchAction"
			validate="false" scope="request">
			<forward name="search" path="/jsp/search.jsp" />
			<forward name="back" path="/jsp/Main.jsp" />
			<forward name="fly" path="/jsp/Open_RefeRegistration.jsp" />
		</action>


		<action name="Personal_informationForm" path="/Personal_informationAction"
			type="sample.pr.main.Personal_informationAction" validate="false"
			scope="request">
			<forward name="main" path="/jsp/Main.jsp" />
			<forward name="pInfo" path="/jsp/Personal_information.jsp" />
			<forward name="search" path="/jsp/search.jsp" />
		</action>

		<action name="Open_informationForm" path="/Open_informationAction"
			type="sample.pr.main.Open_informationAction" validate="false" scope="request">
			<forward name="main" path="/jsp/Main.jsp" />
			<forward name="open" path="/jsp/open_inforegistration.jsp" />
		</action>

		<action name="Open_RefelenceForm" path="/Open_RefelenceAction"
			type="sample.pr.main.Open_RefelenceAction" validate="false" scope="request">
			<forward name="main" path="/jsp/Main.jsp" />
			<forward name="search" path="/jsp/search.jsp" />
		</action>

		<action name="AttendanceForm" path="/AttendanceAction"
			type="sample.pr.main.AttendanceAction" validate="false" scope="request">
			<forward name="main" path="/jsp/Main.jsp" />
			<forward name="attendance" path="/jsp/Attendance.jsp" />
		</action>

		<action name="PasswordForm" path="/PasswordForgetAction"
			type="sample.pr.main.PasswordForgetAction" validate="false" scope="request">
			<forward name="change" path="/jsp/PasswordChange.jsp" />
			<forward name="login" path="/jsp/login.jsp" />
			<forward name="Forget" path="/jsp/PasswordForget.jsp" />
		</action>

		<action name="PasswordForm" path="/PasswordChangeAction"
			type="sample.pr.main.PasswordChangeAction" validate="false" scope="request">
			<forward name="login" path="/jsp/login.jsp" />
			<forward name="change" path="/jsp/PasswordChange.jsp" />
		</action>

		<action name="KintaiMainForm" path="/KintaiMainAction"
			type="sample.pr.main.KintaiMainAction" validate="false" scope="request">
			<forward name="main" path="/jsp/Main.jsp" />
			<forward name="kintaimail" path="/jsp/KintaiMail.jsp"/>
			<forward name="catalog" path="/jsp/KintaiCatalog.jsp"/>
		</action>
		<action name="KintaiMailForm" path="/KintaiMailAction"
			type="sample.pr.main.KintaiMailAction" validate="false" scope="request">
			<forward name="KintaiMain" path="/jsp/KintaiMain.jsp" />
		</action>
				<action name="KintaiMailForm" path="/KintaiMailAction"
			type="sample.pr.main.KintaiMailAction" validate="false" scope="request">
			<forward name="KintaiMain" path="/jsp/KintaiMain.jsp" />
		</action>
		<action name="ReservationForm" path="/ReservationAction"
			type="sample.pr.main.ReservationAction" validate="false" scope="request">
			<forward name="reservation" path="/jsp/Reservation.jsp" />
			<forward name="main" path="/jsp/Main.jsp" />
		</action>
		<action name="KintaiMainForm" path="/KinmuRecordAction"
			type="sample.pr.main.KinmuRecordAction" validate="false" scope="request">
			<forward name="main" path="/jsp/Main.jsp" />
		</action>
				<action name="Access_ControlForm" path="/Access_ControlAction"
			type="sample.pr.main.Access_Control" validate="false" scope="request">
			<forward name="Access" path="/jsp/Access_Control.jsp" />
		</action>
	</action-mappings>


	<!-- ======================================== Message Resources Definitions -->

	<message-resources parameter="MessageResources" />
</struts-config>

